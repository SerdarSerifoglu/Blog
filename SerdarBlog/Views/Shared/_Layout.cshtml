<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="title" content="@ViewBag.SeoTitle" />
    <meta name="description" content="@ViewBag.Description" />
    <meta name="keywords" content="@ViewBag.Keywords" />
    <title>@ViewBag.Title</title>
    <style>

        .ustmenu {
            background-color: #0B2161;
            border-radius: 10px;
        }
    </style>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>

</head>
<body>
    <nav class="navbar navbar-inverse ">
        <div class="container">
            <a href="#" class="navbar-brand">BLOG</a>
            <div class="collapse navbar-collapse acKapa">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#"><span class="glyphicon glyphicon-home"></span>&nbsp Anasayfa</a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span class="glyphicon glyphicon-arrow-down"></span> &nbsp Kategoriler </a>
                        <ul class="dropdown-menu">
                            <li><a href="#">Genel</a></li>
                            <li><a href="#">Basketbol</a></li>
                        </ul>
                    </li>
                    <li><a href="/Yazi/Index/"><span class="glyphicon glyphicon-file"></span>&nbsp Yazılar</a></li>
                    
                    <li>@Html.Partial("_LoginPartial")</li>
                </ul>
            </div>
            
        </div>
        <!-- /.container -->
    </nav>
    @*@Html.Partial("_LoginPartial")*@


    <div class="container col-md-12">
       
        @RenderBody()
    </div>

    <div class="container col-md-12">
        <footer>
            <hr />
            <p>&copy; @DateTime.Now.Year </p>
        </footer>
    </div>
    
   
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>





