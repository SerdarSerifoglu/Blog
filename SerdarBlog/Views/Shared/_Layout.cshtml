<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="title" content="@ViewBag.SeoTitle" />
    <meta name="description" content="@ViewBag.Description" />
    <meta name="keywords" content="@ViewBag.Keywords" />
    <title>@ViewBag.Title</title>

    @Styles.Render("~/Content/css")
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")
    <style>
      
       .ustmenu{
           background-color:#0B2161;
           border-radius:10px;
       }
       
    </style>
</head>
<body>
    <div class="container col-md-12 ustmenu">
        <div class="col-md-9">
        </div>
        <div class="col-md-3">
            @Html.Partial("_LoginPartial")
        </div>
    </div>
    <div class="container col-md-12">
        <div id="list-example" class="list-group col-md-3 solmenu">
            <a class="list-group-item list-group-item-action a" href="~/Home/Index">Ana Sayfa</a>
            <a class="list-group-item list-group-item-action a" href="#list-item-2">Yazılar</a>
            <a class="list-group-item list-group-item-action a" href="#list-item-3">Item 3</a>
            <a class="list-group-item list-group-item-action a" href="#list-item-4">Item 4</a>
        </div>
        <div class="body-content col-md-9">
            @RenderBody()
        </div>
    </div>
    <div class="container col-md-12">
        <footer>
            <hr />
            <p>&copy; @DateTime.Now.Year </p>
        </footer>
    </div>


    

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>





