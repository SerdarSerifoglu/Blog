@model Entity.Kategori
@{
    ViewBag.Title = "Kategori Ekle";
}

<h2>Kategori Ekle</h2>
@using (Html.BeginForm("KategoriEkle", "Kategori", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div>
            <p>Kategori Başlığı</p>
            @Html.TextBoxFor(x => x.KategoriBaslik, new { @class = "kategori", placeholder = "Kategori başlığını giriniz" })
        </div>
        <br />
        <div>
            <p>Kategorinin İçeriği</p>
            @Html.TextBoxFor(x => x.KategoriIcerik, new { @class = "kategori", placeholder = "Kategori başlığını giriniz" })
        </div>
        <br />
       
        <input type="submit" />

    </div>
}